<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#EBE8D9">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="#EBE8D9"
            android:orientation="vertical">

        <!-- horizontal yellow line -->
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="2dip"
                      android:background="#f2c11a"/>

        <md.vcroitor.licenta.client.library.PagerContainer
                android:id="@+id/pager_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff">
            <android.support.v4.view.ViewPager
                    android:layout_width="150dip"
                    android:layout_height="200dip"
                    android:clipChildren="false"
                    android:background="#ffffffff"
                    android:layout_gravity="center_horizontal"/>
        </md.vcroitor.licenta.client.library.PagerContainer>

        <!-- horizontal yellow line -->
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="2dip"
                      android:background="#f2c11a"/>

        <!--title-->
        <TextView
                android:id="@+id/prom_title"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:background="#ffffffff"
                android:textSize="25sp"
                android:text="This is a title"
                android:layout_width="fill_parent"/>


        <!-- price, old price -->
        <LinearLayout
                android:layout_height="100dip"
                android:layout_width="fill_parent"
                android:layout_weight="3"
                android:background="#ffffffff">
            <RelativeLayout android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:layout_width="0dip"/>
            <RelativeLayout android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:layout_width="0dip"/>
            <RelativeLayout android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:layout_width="0dip"/>/>

        </LinearLayout>

        <!-- rating & social -->
        <LinearLayout
                android:layout_height="50dip"
                android:layout_width="fill_parent"
                android:layout_weight="3"
                android:background="#ffffffff">

            <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" android:layout_gravity="center">
                <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_toRightOf="@id/rating_bar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="3/5"/>

            </RelativeLayout>

            <LinearLayout android:layout_height="fill_parent"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_width="0dip">

                <ImageView android:layout_height="wrap_content"
                           android:contentDescription="@null"
                           android:layout_margin="2dip"
                           android:layout_width="wrap_content"
                           android:src="@drawable/ic_facebook"/>
                <ImageView android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_margin="2dip"
                           android:contentDescription="@null"
                           android:src="@drawable/ic_twitter"/>
                <ImageView android:layout_height="fill_parent"
                           android:layout_width="wrap_content"
                           android:layout_margin="2dip"
                           android:contentDescription="@null"
                           android:src="@drawable/ic_googleplus"/>
            </LinearLayout>

        </LinearLayout>

        <!-- separator expand -->
        <RelativeLayout
                android:id="@+id/desc_separator_expand"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical"
                android:layout_width="fill_parent">

            <LinearLayout
                    android:id="@+id/line_expand"
                    android:layout_height="2dip"
                    android:layout_width="fill_parent"
                    android:background="#000000"
                    />

            <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/line_expand"
                    android:src="@drawable/ic_navigation_expand"
                    android:contentDescription="@null"
                    android:clickable="true"
                    android:onClick="doExpand"
                    />
        </RelativeLayout>

        <!-- description -->
        <LinearLayout
                android:id="@+id/desc_view"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">

            <TextView android:layout_width="fill_parent"
                      android:text="@string/big_text"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- separator collapse -->
        <RelativeLayout
                android:id="@+id/desc_separator_collapse"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="fill_parent">

            <LinearLayout
                    android:id="@+id/line_collapse"
                    android:layout_height="2dip"
                    android:layout_width="fill_parent"
                    android:background="#000000"
                    />

            <ImageView
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/line_collapse"
                    android:src="@drawable/ic_navigation_collapse"
                    android:contentDescription="@null"
                    android:clickable="true"
                    android:onClick="doCollapse"
                    />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>