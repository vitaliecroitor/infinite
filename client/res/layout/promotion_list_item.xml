<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/prom_list_item"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#e0e4e1"
        >

    <ImageView
            android:id="@+id/id_prom_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="3dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img"/>

    <LinearLayout
            android:id="@+id/id_orders"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/id_nr_of_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_some_number"
                android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/id_title_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/id_prom_image"
            android:layout_margin="2dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/id_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/some_string"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/id_prom_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:text="244 lei"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/id_prom_price_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:text="200 lei"
                android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/id_title_price">

        <TextView
                android:id="@+id/id_prom_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:ellipsize="end"
                android:gravity="center|fill_horizontal"
                android:maxLines="3"
                android:text="This is a small description about the product that is going to be shown on this particular point asdfhj aasldkf askdfjskl aslkjflsa  asdfasd jdsaf mskldnfmlas lks;jdaf;klasd f;ksdjf laskjdf d"
                android:textSize="15sp"/>
    </LinearLayout>

</RelativeLayout>