<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/prom_list_item"
              android:layout_width="fill_parent"
              android:layout_margin="2dip"
              android:weightSum="9"
              android:layout_height="100dip"
              android:layout_marginLeft="5dip"
              android:layout_marginRight="5dip"
              android:background="@color/app_white"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/prom_image"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/icon"/>

    <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_margin="5dip"
            android:layout_weight="5"
            >

        <TextView
                android:id="@+id/prom_title"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="LG smart TV"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/prom_discount"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Reducere:"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />

        <TextView
                android:id="@+id/prom_discount_value"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="2dip"
                android:text="9"
                android:textSize="10sp"
                android:layout_toRightOf="@id/prom_discount"
                android:layout_alignParentBottom="true"
                />

        <TextView
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="1dip"
                android:text="%"
                android:textSize="10sp"
                android:layout_toRightOf="@id/prom_discount_value"
                android:layout_alignParentBottom="true"
                />

        <TextView
                android:id="@+id/save_money"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:text="Economie:"
                android:layout_above="@id/prom_discount"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/save_money_value"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="2dip"
                android:text="100"
                android:textSize="10sp"
                android:layout_toRightOf="@id/save_money"
                android:layout_above="@id/prom_discount"
                />

        <TextView
                android:id="@+id/nr_of_orders"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:text="Comandari:"
                android:layout_above="@id/save_money"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/nr_of_orders_value"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="2dip"
                android:text="20"
                android:textSize="10sp"
                android:layout_toRightOf="@id/nr_of_orders"
                android:layout_above="@id/save_money"
                />

        <TextView
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="1dip"
                android:text="lei"
                android:textSize="10sp"
                android:layout_toRightOf="@id/save_money_value"
                android:layout_above="@id/prom_discount"
                />

        <TextView
                android:id="@+id/prom_currency"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="lei"
                android:layout_marginLeft="5dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/prom_price"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="250"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/prom_currency"
                android:layout_alignParentBottom="true"/>

        <TextView
                android:id="@+id/prom_currency_old"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="lei"
                android:layout_marginLeft="3dip"
                android:layout_alignParentRight="true"
                android:layout_above="@id/prom_price"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/prom_old_price"
                android:textColor="#000000"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="350"
                android:textSize="15sp"
                android:layout_toLeftOf="@id/prom_currency_old"
                android:layout_above="@id/prom_price"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="#f2c11a"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_navigation_next_item"
                android:contentDescription="@null"
                />
    </LinearLayout>

</LinearLayout>