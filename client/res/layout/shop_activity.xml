<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:background="#EBE8D9"
                android:layout_width="fill_parent"
                android:orientation="vertical"
        >
    <!-- Action bar -->
    <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_height="48dip"
            android:background="@drawable/action_bar_gradient"
            android:orientation="horizontal"
            android:layout_width="fill_parent">

        <LinearLayout android:layout_height="fill_parent"
                      android:layout_margin="5dip"
                      android:clickable="true"
                      android:onClick="goBack"
                      android:layout_width="wrap_content">
            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_navigation_previous_item"
                    android:contentDescription="@null"
                    />

            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/logo_small"
                    android:contentDescription="@null"
                    android:layout_marginLeft="-15dp"/>
        </LinearLayout>

        <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_action_settings"
                android:contentDescription="@null"
                />
    </RelativeLayout>

    <!-- content -->
    <ScrollView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@id/action_bar">

        <RelativeLayout
                android:layout_height="120dip"
                android:orientation="horizontal"
                android:layout_width="fill_parent">

            <ImageView
                    android:id="@+id/shop_logo"
                    android:layout_height="120dip"
                    android:layout_width="120dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/img"
                    android:contentDescription="@null"/>

            <TextView
                    android:id="@+id/shop_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    android:textSize="25sp"
                    android:text="Shop name"
                    android:layout_toRightOf="@id/shop_logo"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textSize="15sp"
                    android:text="Shop name"
                    android:layout_toRightOf="@id/shop_logo"
                    android:layout_below="@id/shop_name"
                    android:textColor="#000000"
                    />

            <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/shop_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip">

                <TextView
                        android:id="@+id/nr_of_prom"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="5"/>

                <TextView android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:layout_width="wrap_content"
                          android:textSize="15sp"
                          android:layout_marginLeft="2dip"
                          android:layout_toRightOf="@id/nr_of_prom"
                          android:text="promotii active" android:id="@+id/textView"/>

                <RelativeLayout android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                </RelativeLayout>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_facebook"
                        android:layout_toRightOf="@+id/textView" android:layout_alignBottom="@+id/nr_of_prom"
                        android:id="@+id/imageView"/>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_facebook"
                        android:layout_toRightOf="@+id/imageView" android:layout_alignBottom="@+id/nr_of_prom"
                        android:id="@+id/imageView1"/>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_facebook"
                        android:layout_toRightOf="@+id/imageView1" android:layout_alignBottom="@+id/nr_of_prom"/>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>