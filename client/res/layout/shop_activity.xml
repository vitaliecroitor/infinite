<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:background="@color/app_background"
                android:layout_width="fill_parent"
                android:orientation="vertical"
        >
    <!-- Action bar -->
    <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_height="48dip"
            android:background="@drawable/action_bar_gradient"
            android:orientation="horizontal"
            android:layout_width="fill_parent">

        <LinearLayout android:layout_height="fill_parent"
                      android:layout_margin="5dip"
                      android:clickable="true"
                      android:onClick="goBack"
                      android:layout_width="wrap_content">
            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_navigation_previous_item"
                    android:contentDescription="@null"
                    />

            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/logo_small"
                    android:contentDescription="@null"
                    android:layout_marginLeft="-15dp"/>
        </LinearLayout>

        <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_action_settings"
                android:contentDescription="@null"
                />
    </RelativeLayout>

    <!-- content -->
    <ScrollView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@color/app_background"
            android:layout_below="@id/action_bar">

        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:background="@color/app_background"
                android:layout_width="fill_parent">

            <!--log text etc -->
            <RelativeLayout
                    android:id="@+id/first_layout"
                    android:layout_height="120dip"
                    android:layout_width="fill_parent"
                    android:background="@color/app_white">

                <!-- logo -->
                <ImageView
                        android:id="@+id/shop_logo"
                        android:layout_height="120dip"
                        android:layout_width="120dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/img"
                        android:contentDescription="@null"/>

                <!-- shop name -->
                <TextView
                        android:id="@+id/shop_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:textSize="25sp"
                        android:text="@string/shop_name"
                        android:layout_toRightOf="@id/shop_logo"
                        android:textColor="@color/app_black"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />

                <!-- shop category -->
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textSize="15sp"
                        android:text="@string/shop_category"
                        android:layout_toRightOf="@id/shop_logo"
                        android:layout_below="@id/shop_name"
                        android:textColor="#000000"
                        />

                <RelativeLayout
                        android:layout_height="60dip"
                        android:layout_width="60dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                    <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_rating_star"/>

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/dummy_rate"
                            android:textColor="@color/app_black"
                            android:textSize="18dip"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            />
                </RelativeLayout>


                <RelativeLayout
                        android:paddingTop="3dip"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/shop_logo"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip">

                    <!-- text -->
                    <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:layout_alignParentBottom="true">
                        <TextView
                                android:id="@+id/nr_of_prom"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textColor="@color/app_black"
                                android:textSize="15sp"
                                android:text="@string/dummy_number"/>

                        <TextView android:layout_height="wrap_content"
                                  android:layout_width="wrap_content"
                                  android:textSize="15sp"
                                  android:layout_marginLeft="2dip"
                                  android:textColor="@color/app_black"
                                  android:layout_toRightOf="@id/nr_of_prom"
                                  android:text="@string/promotions"
                                  android:singleLine="true"
                                  android:ellipsize="marquee"
                                  android:marqueeRepeatLimit="marquee_forever"
                                  android:scrollHorizontally="true"
                                  android:focusable="true"
                                  android:focusableInTouchMode="true"
                                />
                    </RelativeLayout>

                    <!-- social -->
                    <RelativeLayout
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content">
                        <ImageView
                                android:id="@+id/social_facebook"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_facebook"
                                android:layout_alignParentRight="true"
                                />
                        <ImageView
                                android:id="@+id/social_twitter"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:contentDescription="@null"
                                android:layout_toLeftOf="@id/social_facebook"
                                android:src="@drawable/ic_twitter"
                                />
                        <ImageView
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/social_twitter"
                                android:layout_width="wrap_content"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_googleplus"
                                />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <!-- hot promotions -->
            <LinearLayout
                    android:layout_marginTop="5dip"
                    android:layout_below="@id/first_layout"
                    android:baselineAligned="false"
                    android:layout_height="150dip"
                    android:background="@color/app_background"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >

                <RelativeLayout android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/app_white"
                                android:layout_marginRight="5dip"
                                android:layout_width="0dip">
                    <ImageView
                            android:layout_height="80dip"
                            android:contentDescription="@null"
                            android:layout_width="80dip"
                            android:layout_marginTop="5dip"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icon"/>

                    <!--  add old price new price and title in this layout -->
                </RelativeLayout>
                <RelativeLayout android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/app_white"
                                android:layout_marginRight="5dip"
                                android:layout_width="0dip">
                </RelativeLayout>
                <RelativeLayout android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/app_white"
                                android:layout_width="0dip">
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>