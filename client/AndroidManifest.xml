<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="md.vcroitor.licenta.client"
          android:versionCode="1"
          android:versionName="0.0.1-SNAPSHOT">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="16"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name" android:allowBackup="true" android:theme="@android:style/Theme.NoTitleBar">
        <activity
                android:name="md.vcroitor.licenta.client.activity.MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="md.vcroitor.licenta.client.activity.ScreenSlideActivity"
                android:label="@string/title_screen_slide"
                android:theme="@style/Theme.Styled"
                android:parentActivityName=".MainActivity"
                android:screenOrientation="portrait"
                android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity"/>
        </activity>
        <activity
                android:theme="@style/Theme.Styled"
                android:name="md.vcroitor.licenta.client.activity.PromotionActivity"
                android:label="promotion activity"
                android:parentActivityName=".ScreenSlideActivity"
                android:screenOrientation="portrait"
                android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ScreenSlideActivity"/>
        </activity>
        <activity
                android:theme="@style/Theme.Styled"
                android:name="md.vcroitor.licenta.client.activity.PagerSlidingActivity"
                android:screenOrientation="portrait"
                android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".PagerSlidingActivity"/>
        </activity>
    </application>

</manifest>